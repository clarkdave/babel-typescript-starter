{
  "name": "babel-typescript-starter",
  "private": true,
  "scripts": {
    "start":
      "concurrently --kill-others --names \"tsc,node\" -c \"blue,green\" \"npx tsc --noEmit --pretty --watch\" \"npx nodemon lib/index.ts --exec babel-node --extensions '.ts,.tsx' lib/index.ts\"",
    "typecheck": "npx tsc --noEmit --pretty",
    "build":
      "npx tsc --noEmit --pretty && npx babel --extensions '.ts,.tsx' --source-maps --out-dir dist lib",
    "serve": "node --require source-map-support/register dist/index.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.35",
    "@babel/core": "^7.0.0-beta.35",
    "@babel/node": "^7.0.0-beta.35",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.35",
    "@babel/preset-env": "^7.0.0-beta.35",
    "@babel/preset-react": "^7.0.0-beta.35",
    "@babel/preset-stage-1": "^7.0.0-beta.35",
    "@babel/preset-typescript": "^7.0.0-beta.35",
    "@babel/register": "^7.0.0-beta.35",
    "ava": "^0.24.0",
    "babel-plugin-transform-decorators": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "concurrently": "^3.5.1",
    "node-dev": "^3.1.3",
    "nodemon": "^1.13.3",
    "prettier": "^1.9.2",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@types/koa": "^2.0.43",
    "koa": "^2.4.1",
    "source-map-support": "^0.5.0",
    "tslib": "^1.8.1"
  }
}
